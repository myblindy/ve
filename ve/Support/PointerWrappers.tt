		init(&ptr);
		SetHandle(new IntPtr(ptr));
	}
<# } else { #>
	[ReliabilityContract(Consistency.WillNotCorruptState, Cer.Success)]
	public unsafe Safe<#= field.type #>(): base(IntPtr.Zero, true) => SetHandle(new IntPtr(<#= field.alloc #>()));
<# } #>

